{
  "designSystem": {
    "name": "Zero Waste Asia Design System",
    "version": "2.0",
    "theme": "Environmental & Sustainability - Zero Waste Movement",
    
    "colorPalettes": {
      "primary": {
        "name": "ZWA Blue",
        "description": "Primary brand color - professional, trustworthy teal-blue",
        "scale": {
          "50": "#E6F2F8",
          "100": "#C2E0EE",
          "200": "#9BCDE4",
          "300": "#74BADA",
          "400": "#53A7D0",
          "500": "#2179B3",
          "600": "#1A628F",
          "700": "#14526F",
          "800": "#0D3A4E",
          "900": "#072233",
          "950": "#041419"
        },
        "usage": "Navigation, links, secondary buttons, accents"
      },
      "secondary": {
        "name": "ZWA Gold",
        "description": "Secondary brand color - warm, inviting, action-oriented",
        "scale": {
          "50": "#FDFAF2",
          "100": "#F9F0D9",
          "200": "#F3E3B8",
          "300": "#EDD597",
          "400": "#E7C876",
          "500": "#D4A73F",
          "600": "#B8923A",
          "700": "#927432",
          "800": "#6C5628",
          "900": "#46381A",
          "950": "#2E240F"
        },
        "usage": "Primary CTAs, highlights, featured elements"
      },
      "neutrals": {
        "name": "Neutral Gray Scale",
        "description": "Backgrounds, text, borders",
        "scale": {
          "50": "#FAFAFA",
          "100": "#F5F5F5",
          "200": "#E5E5E5",
          "300": "#D4D4D4",
          "400": "#A3A3A3",
          "500": "#737373",
          "600": "#525252",
          "700": "#404040",
          "800": "#262626",
          "900": "#171717",
          "950": "#0A0A0A"
        },
        "usage": "Text, backgrounds, borders, UI elements"
      },
      "accent": {
        "green": {
          "500": "#489E4A",
          "600": "#3A7F3C",
          "700": "#2C5F2E"
        }
      }
    },

    "semanticColors": {
      "backgrounds": {
        "base": "#FFFFFF",
        "muted": "neutral-50",
        "card": "#FFFFFF",
        "header": "blue-800"
      },
      "text": {
        "primary": "neutral-900",
        "secondary": "neutral-600",
        "onDark": "#FFFFFF",
        "onPrimary": "#FFFFFF",
        "onSecondary": "neutral-900"
      },
      "borders": {
        "default": "neutral-200",
        "muted": "neutral-100",
        "focus": "blue-500"
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "fallback": "system-ui, sans-serif"
      },
      "typeScale": {
        "hero": {
          "size": "3rem - 4.5rem (48-72px)",
          "weight": "700-900",
          "lineHeight": "1.1",
          "letterSpacing": "-0.02em",
          "usage": "Landing page headlines"
        },
        "h1": {
          "size": "2rem - 3rem (32-48px)",
          "weight": "700-800",
          "lineHeight": "1.2",
          "usage": "Page titles"
        },
        "h2": {
          "size": "1.5rem - 2rem (24-32px)",
          "weight": "600-700",
          "lineHeight": "1.3",
          "usage": "Section titles"
        },
        "h3": {
          "size": "1.25rem - 1.5rem (20-24px)",
          "weight": "600",
          "lineHeight": "1.4",
          "usage": "Subsection titles"
        },
        "body": {
          "size": "1rem - 1.125rem (16-18px)",
          "weight": "400",
          "lineHeight": "1.6",
          "usage": "Body text, paragraphs"
        },
        "small": {
          "size": "0.875rem - 0.9375rem (14-15px)",
          "weight": "400",
          "lineHeight": "1.5",
          "usage": "Captions, labels, metadata"
        }
      },
      "fontWeights": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800,
        "black": 900
      }
    },

    "spacing": {
      "baseUnit": "8px",
      "scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px",
        "3xl": "64px",
        "4xl": "96px",
        "5xl": "128px"
      },
      "containerMaxWidth": "1280px",
      "contentMaxWidth": "1120px"
    },

    "borderRadius": {
      "none": "0px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "2xl": "32px",
      "pill": "999px",
      "circle": "50%"
    },

    "shadows": {
      "sm": "0 1px 3px rgba(0,0,0,0.06), 0 1px 2px rgba(0,0,0,0.04)",
      "md": "0 4px 6px rgba(0,0,0,0.05), 0 2px 4px rgba(0,0,0,0.03)",
      "lg": "0 10px 15px rgba(0,0,0,0.08), 0 4px 6px rgba(0,0,0,0.05)",
      "xl": "0 20px 25px rgba(0,0,0,0.1), 0 10px 10px rgba(0,0,0,0.04)",
      "philosophy": "Soft, organic shadows with low opacity for subtle depth"
    },

    "components": {
      "buttons": {
        "primary": {
          "description": "Main call-to-action buttons",
          "background": "gold-500",
          "color": "neutral-900",
          "hoverBackground": "gold-600",
          "borderRadius": "12px",
          "padding": "12-16px horizontal, 11px vertical",
          "fontSize": "16px",
          "fontWeight": "600",
          "shadow": "sm",
          "hoverEffect": "Scale 1.02, shadow-md",
          "transition": "200ms ease-out"
        },
        "secondary": {
          "description": "Secondary actions",
          "background": "blue-500",
          "color": "#FFFFFF",
          "hoverBackground": "blue-700",
          "borderRadius": "12px",
          "padding": "12-16px horizontal, 11px vertical",
          "fontSize": "16px",
          "fontWeight": "600",
          "shadow": "sm"
        },
        "ghost": {
          "description": "Subtle actions",
          "background": "transparent",
          "color": "neutral-600",
          "hoverBackground": "neutral-100",
          "border": "none"
        },
        "outline": {
          "description": "Secondary emphasis",
          "background": "transparent",
          "color": "blue-500",
          "border": "2px solid blue-500",
          "hoverBackground": "blue-500",
          "hoverColor": "#FFFFFF"
        }
      },

      "cards": {
        "standard": {
          "background": "#FFFFFF",
          "borderRadius": "16px",
          "padding": "24-32px",
          "shadow": "sm",
          "border": "1px solid neutral-100",
          "hoverEffect": "shadow-md with subtle lift"
        },
        "stats": {
          "background": "#FFFFFF",
          "borderRadius": "12px",
          "padding": "24px",
          "numberSize": "32-48px",
          "numberWeight": "700-800",
          "numberColor": "neutral-900",
          "labelSize": "14-16px",
          "labelWeight": "400-500",
          "labelColor": "neutral-600"
        }
      },

      "header": {
        "background": "blue-800",
        "height": "64-72px",
        "padding": "16px",
        "textColor": "#FFFFFF",
        "sticky": true,
        "shadow": "md on scroll",
        "borderBottom": "1px solid blue-700"
      },

      "accordion": {
        "trigger": {
          "padding": "16-20px",
          "background": "#FFFFFF",
          "border": "1px solid neutral-200",
          "borderRadius": "12px",
          "hoverBackground": "neutral-50"
        },
        "content": {
          "padding": "16-24px",
          "animation": "smooth expand/collapse 200ms"
        }
      },

      "inputs": {
        "height": "44px",
        "padding": "12px",
        "fontSize": "16px",
        "borderRadius": "8px",
        "border": "1px solid neutral-200",
        "focusBorder": "2px solid blue-500",
        "focusRing": "2px blue-500 with 2px offset"
      }
    },

    "layout": {
      "maxWidth": "1280px (6xl)",
      "contentPadding": {
        "mobile": "16px",
        "tablet": "24px",
        "desktop": "32px"
      },
      "sectionSpacing": {
        "mobile": "48px",
        "desktop": "80-96px"
      },
      "grid": {
        "columns": {
          "mobile": 1,
          "tablet": 2,
          "desktop": "3-4"
        },
        "gap": "24-32px"
      }
    },

    "animations": {
      "transitions": {
        "fast": "200ms ease-out",
        "normal": "300ms ease-out",
        "smooth": "300ms cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "hover": {
        "scale": "1.02",
        "lift": "translateY(-2px)",
        "shadowIncrease": "sm to md"
      }
    },

    "accessibility": {
      "colorContrast": "WCAG AA minimum (4.5:1 for normal text, 3:1 for large text)",
      "focusVisible": "2px ring with 2px offset in primary color",
      "minTouchTarget": "44x44px",
      "motionReduced": "Respect prefers-reduced-motion media query"
    },

    "designPrinciples": [
      "Clean and minimal - generous whitespace",
      "Professional yet approachable",
      "Nature-inspired without being childish",
      "Strong visual hierarchy with typography and color",
      "Accessible and inclusive",
      "Mobile-first responsive design"
    ],

    "brandPersonality": {
      "keywords": [
        "Professional",
        "Trustworthy",
        "Action-oriented",
        "Hopeful",
        "Community-focused",
        "Evidence-based",
        "Inclusive"
      ],
      "toneOfDesign": "Clean, modern, and professional with warm accents that inspire action"
    }
  }
}
